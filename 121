class Solution {
    public int maxProfit(int[] prices) {
        int l = Integer.MAX_VALUE; 
        int profit = 0; 
        int sold = 0; 
        
        for(int i = 0; i < prices.length; i++){
            if(prices[i] < l){ 
                l = prices[i]; 
            }
            sold = prices[i] - l; 
            if(profit < sold){
                profit = sold;
            }
        }
        return profit;
    }
}
