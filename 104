class Solution {
    public int maxDepth(TreeNode root) {
        return help(root,0);
    }

    public int help(TreeNode root, int curr){
        if(root==null){
            return curr;
        }

        int a = help(root.left,curr+1);
        int b = help(root.right,curr+1);

        return Math.max(a,b);
    }
}
