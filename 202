class Solution {
    public int sum(int n){
        int r=0;
        int s=0;
        while(n!=0){
            r=n%10;
            s+=r*r;
            n/=10;
        }
        return s;
    } 
    public boolean isHappy(int n) {
        int slow=n;
        int fast=n;
        do{
            slow=sum(slow);
            fast=sum(sum(fast));
        }
        while(slow!=fast);
        return fast==1;
    }
}
