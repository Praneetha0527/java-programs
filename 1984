class Solution {
    public int minimumDifference(int[] nums, int k) {
        int n=nums.length;
        if(n==1){
            return 0;
        }
        Arrays.sort(nums);
        int i =0;
        int j = k-1;
        int min = nums[n-1];
        while(j<n){
            min = Math.min(nums[j]-nums[i],min);
            i++;
            j++;
        }
        return min;
    }
}
