class Solution {
  public double new21Game(int n, int k, int max) {
    if (k == 0 || n >= k - 1 + max)
      return 1.0;

    double ans = 0.0;
    double[] dp = new double[n + 1]; 
    dp[0] = 1.0;
    double Sum = dp[0]; 

    for (int i = 1; i <= n; ++i) {
      dp[i] = Sum / max;
      if (i < k)
        Sum += dp[i];
      else 
        ans += dp[i];
      if (i - max >= 0)
        Sum -= dp[i - max];
    }
    return ans;
  }
}
