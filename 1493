class Solution {
    public int longestSubarray(int[] nums) {
        int left=0; int ans=0;
        int c=0;

        for(int i=0; i<nums.length; i++) {
            if(nums[i]==0) c++;
            while(c>1) {
                if(nums[left]==0) c--;
                left++;
            }
            ans=Math.max(ans,i-left+1-1);           
        }
        return ans;
    }
}
